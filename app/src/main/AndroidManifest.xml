<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.depo_takip_sistemi">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Depo_takip_sistemi"
        tools:targetApi="31">

        <!-- Aktivite tanımları -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Depo_takip_sistemi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UrunDetayActivity"
            android:exported="false"
            android:label="@string/title_activity_urun_detay"
            android:theme="@style/Theme.Depo_takip_sistemi" />

        <activity
            android:name=".Urun_teslimActivity"
            android:exported="false"
            android:label="@string/title_activity_urun_teslim"
            android:theme="@style/Theme.Depo_takip_sistemi" />

        <activity
            android:name=".UrunAlActivity"
            android:exported="false"
            android:label="@string/title_activity_urun_al"
            android:theme="@style/Theme.Depo_takip_sistemi" />

        <activity
            android:name=".listActivity"
            android:exported="false"
            android:label="@string/title_activity_list"
            android:theme="@style/Theme.Depo_takip_sistemi" />

        <activity
            android:name=".AddActivity"
            android:exported="false"
            android:label="@string/title_activity_add"
            android:theme="@style/Theme.Depo_takip_sistemi" />

        <!-- Barcode scanner activity -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="android:screenOrientation" />

    </application>

</manifest>
